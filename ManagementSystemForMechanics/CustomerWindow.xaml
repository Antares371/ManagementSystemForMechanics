<Window x:Class="ManagementSystemForMechanics.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementSystemForMechanics"
        mc:Ignorable="d"
        Title="CustomerWindow"
        Height="450"
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label Content="Customer"
               FontSize="25"
               FontStyle="Italic"
               FontWeight="Bold"
               Margin="20,10"></Label>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="2" HorizontalAlignment="Right" Margin="20">
            <Button Width="145"
                    Height="35"
                    Margin="10">Save</Button>
            <Button Width="145"
                    Height="35"
                    Margin="10">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
